<h1>Register</h1>

<form action="/register" method="POST">
  <div class="row mb-3 justify-content-center">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Username</label>
    <div class="col-sm-3">
      <input value="{{user.username}}" type="username" name = "username" class="form-control" placeholder="Username" id="inputEmail3" required>
    </div>
  </div>
  <div class="row mb-3 justify-content-center">
    <label for="input-Email3" class="col-sm-2 col-form-label" >Email</label>
    <div class="col-sm-3">
      <input value="{{user.email}}" name = "email" type="email" class="form-control" placeholder="user@example.org" id="input-Email3" required>
    </div>
  </div>
  <div class="row mb-3 justify-content-center">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Avatar</label>
    <div class="col-sm-3">
      <input type="email" class="form-control" name="avatar" placeholder="Avatar" id="avatar">
    </div>
  </div>
  <div class="row mb-3 justify-content-center">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-3">
      <input type="password" name="password" class="form-control" placeholder="**********" id="password" required>
    </div>
  </div>
  <div class="row mb-3 justify-content-center">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Repete Password</label>
    <div class="col-sm-3">
      <input type="password" name="repeatPassword" class="form-control" placeholder="**********" id="repeatPassword" required>
    </div>
  </div>
  <fieldset class="row mb-3 justify-content-center">
    <legend class="col-form-label col-sm-2 pt-0">Roles</legend>
    <div class="col-sm-3">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="creator" id="creator" value="option1" checked>
        <label class="form-check-label" for="gridRadios1">
          Creator
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="guest" id="guest" value="option2">
        <label class="form-check-label" for="gridRadios2">
          Guest
        </label>
      </div>
    </div>
  </fieldset>
  <div class="row mb-3 justify-content-center">
  <div class="col-sm-3">
  <button type="submit" class="btn btn-primary ">Create</button>
  </div>
  </div>
</form>